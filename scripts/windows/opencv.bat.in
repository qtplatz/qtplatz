@echo off
set BOOST_VERSION="${BOOST_VERSION}"
set BOOST_ROOT="${BOOST_ROOT}"
set BOOST_LIBRARYDIR="${BOOST_LIBRARYDIR}"
set GENERATOR="${GENERATOR}"

set OPENCV_SOURCE_DIR=${OPENCV_SOURCE_DIR}
set OPENCV_CONTRIB_SOURCE_DIR=${OPENCV_CONTRIB_SOURCE_DIR}
set OPENCV_EXTRA_SOURCE_DIR=${OPENCV_EXTRA_SOURCE_DIR}

set OPENCV_BINARY_DIR=${OPENCV_BINARY_DIR}
set CUDA=${CUDA}
set BUILD_CONFIG=Release

pushd ${OPENCV_BINARY_DIR}

cmake -DCMAKE_EXTRA_MODULES_PATH=%OPENCV_CONTRIB_SOURCE_DIR%\modules ^
      	  -DCMAKE_BUILD_TYPE=%BUILD_CONFIG% ^
	  -DENABLE_CXX11=ON		    ^
	  -DBUILD_PERF_TESTS=OFF            ^
	  -DWITH_XINE=ON                    ^
	  -DBUILD_TESTS=OFF                 ^
	  -DENABLE_PRECOMPILED_HEADERS=OFF  ^
	  -DCMAKE_SKIP_RPATH=ON             ^
	  -DBUILD_WITH_DEBUG_INFO=OFF       ^
	  -DCUDA_FAST_MATH=%CUDA%           ^
	  -DWITH_CUBLAS=%CUDA%              ^
	  -DCUDA_NVCC_FLAGS="--expt-relaxed-constexpr" ^
	  -DCMAKE_DEBUG_POSTFIX="d" ^
	  -DCPACK_GENERATOR=WIX ^
	  -DCPACK_WIX_UPGRADE_GUID="6C1F190B-B5A3-48A9-BA43-0B8AF0BC370E" ^
	  -DOPENCV_LICENSE_FILE="LICENSE.txt" ^
	  -DCPACK_RESOURCE_FILE_LICENSE="LICENSE.txt" ^
	  -DCPACK_WIX_LICENSE_RTF="LICENSE.txt" ^
	  -G %GENERATOR% %OPENCV_SOURCE_DIR%

echo msbuild OpenCV.sln /t:build /mp /p:Configuration=Debug         > build.bat
echo msbuild OpenCV.sln /t:build /mp /p:Configuration=Release      >> build.bat
echo msbuild INSTALL.vcxproj /t:build /mp /p:Configuration=Debug   >> build.bat
echo msbuild INSTALL.vcxproj /t:build /mp /p:Configuration=Release >> build.bat

echo "run build.bat"

