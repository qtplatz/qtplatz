@echo off
set BOOST_VERSION="${BOOST_VERSION}"
set BOOST_ROOT="${BOOST_ROOT}"
set BOOST_SOURCE_DIR="${BOOST_SOURCE_DIR}"
set BZIP2_SOURCE_DIR="${BZIP2_SOURCE_DIR}"

pushd "${BOOST_SOURCE_DIR}"

.\bootstrap.bat

echo .\b2 -j%NUMBER_OF_PROCESSORS% address-model=64 -s BZIP2_SOURCE=%BZIP2_SOURCE_DIR% ^
     link=static --stagedir=stage/x64-static stage install > build-static.bat

echo .\b2 -j%NUMBER_OF_PROCESSORS% address-model=64 -s BZIP2_SOURCE=%BZIP2_SOURCE_DIR% ^
     link=shared --stagedir=stage/x64-shared stage install > build-shared.bat
