@echo off
set BOOST_VERSION="${BOOST_VERSION}"
set BOOST_ROOT="${BOOST_ROOT}"
set Boost_ROOT="${BOOST_ROOT}"
set BOOST_LIBRARYDIR="${BOOST_LIBRARYDIR}"
set GENERATOR="NMake Makefiles"

if not exist "${EIGEN_BINARY_DIR}" mkdir "${EIGEN_BINARY_DIR}"

pushd "${EIGEN_BINARY_DIR}"

cmake -Wno-dev ^
      -DBOOST_LIBRARYDIR=%BOOST_LIBRARYDIR% ^
   	 -DBOOST_ROOT=%BOOST_ROOT% ^
         -G %GENERATOR% "${EIGEN_SOURCE_DIR}"

:: add follwing if you need to install specific location -- default location should be $ENV{ProgramFiles(x86)}
::-DCMAKE_INSTALL_PREFIX="${EIGEN_INSTALL_PREFIX}" ^
