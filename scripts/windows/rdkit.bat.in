@echo off
set BOOST_VERSION="${BOOST_VERSION}"
set BOOST_ROOT="${BOOST_ROOT}"
set BOOST_LIBRARYDIR="${BOOST_LIBRARYDIR}"
set GENERATOR="${GENERATOR}"
set RDBASE="${RDBASE}"

pushd "${RDKIT_BINARY_DIR}"

cmake -DBOOST_LIBRARYDIR=%BOOST_LIBRARYDIR% ^
   	 -DBOOST_ROOT=%BOOST_ROOT% ^
      	 -DBoost_USE_STATIC_LIBS=ON ^
      	 -DRDK_BUILD_INCHI_SUPPORT=ON ^
      	 -DRDK_BUILD_PYTHON_WRAPPERS=OFF ^
      	 -DRDK_BUILD_SWIG_JAVA_WRAPPER=OFF ^
      	 -DRDK_INSTALL_STATIC_LIBS=ON ^
	 -DRDK_INSTALL_DYNAMIC_LIBS=ON ^
      	 -DCMAKE_DEBUG_POSTFIX="d" -G %GENERATOR% %RDBASE%

echo msbuild /m:%NUMBER_OF_PROCESSORS% /p:Configuration=Debug INSTALL.vcxproj > build.bat
echo msbuild /m:%NUMBER_OF_PROCESSORS% /p:Configuration=Release INSTALL.vcxproj >> build.bat
echo "run build.bat"

