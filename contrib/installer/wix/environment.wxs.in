<CPackWiXPatch>
  <CPackWiXFragment Id="CM_CP_applications.bin.adcontrols.dll">
    <Environment Id="MY_CUSTOM_PATH"
                 Action="set"
                 Name="PATH"
                 Part="last"
                 System="yes"
                 Value="[INSTALL_ROOT]bin" />
    <Environment Id="MY_CUSTOM_PYTHONPATH"
                 Action="set"
                 Name="PYTHONPATH"
                 Part="last"
                 System="yes"
                 Value="[INSTALL_ROOT]python@Python3_VERSION_MAJOR@.@Python3_VERSION_MINOR@/site-packages" />
  </CPackWiXFragment>
</CPackWiXPatch>
